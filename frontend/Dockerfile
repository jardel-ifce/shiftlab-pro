# === Build stage ===
FROM node:20-alpine AS build

WORKDIR /app

COPY package.json package-lock.json ./
RUN npm ci

COPY . .

ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL

RUN npm run build

# === Production stage ===
FROM node:20-alpine

RUN npm install -g serve

COPY --from=build /app/dist /app

CMD ["sh", "-c", "serve /app -s -l tcp://0.0.0.0:$PORT"]
